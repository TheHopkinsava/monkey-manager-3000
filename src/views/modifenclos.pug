extends layout.pug

block header
    a.btn.btn-Light(href='/', style='margin-left:10px; margin-top:10px') Retourner a l'observatoir

block content
    - var url = '/modifyenclo/' + id
    form(method='POST' action=url style='margin-left:10px;margin-right:70%;')
        div.form-group
            label(for='NomEnclos') Nom:
            input#number.form-control(type="text", placeholder="Exemple :Marseille" name='NomEnclos')
        div.form-group
            label(for='TypeEnclos') Type d'enclos:
            input#TypeEnclos.form-control(type="text", placeholder="Exemple :cite,favelas,goulag,ghetto,.." name='TypeEnclos')
        div.form-group
            label(for='Taille') Taille (en Hectares):
            input#Taille.form-control(type="float", placeholder="Ma bite en fait 3 pour comparaison" name='TypeEnclos')
        button.btn.btn-Light(type='submit') Valider